<!-- Form structure -->
<form role="form">
  <div class="form-group">
    <label for="username">Username</label>
    <input type="text" id="username" name="username" class="form-control">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="password" name="password" class="form-control">
  </div>
  <input type="submit" value="Login" class="btn btn-primary">
  <input type="button" value="Cacel" class="btn btn-danger">
</form>

<br>

<!-- Form inline -->
<form role="form" class="form-inline">
  <div class="form-group">
    <label for="username">Username</label>
    <input type="text" id="username" name="username" class="form-control">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="password" name="password" class="form-control">
  </div>
  <input type="submit" value="Login" class="btn btn-primary">
  <input type="button" value="Cacel" class="btn btn-danger">
</form>

<br>

<!-- Form horizontal -->
<form role="form" class="form-horizontal">
  <div class="form-group">
    <label for="username" class="col-sm-2 control-label">Username</label>
    <div class="col-sm-10">
      <input type="text" id="username" name="username" class="form-control">  
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" id="password" name="password" class="form-control">  
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Login" class="btn btn-primary">
      <input type="button" value="Cacel" class="btn btn-danger">  
    </div>
  </div>
</form>

<!-- Checkbox & Radio button -->
<form role="form">
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <input type="checkbox" value="1">
          Remember me
        </label>
      </div>
      <div class="radio">
        <label for="loginTypeExisting">
          <input type="radio" name="loginTypeRadios" id="loginTypeExisting" value="existing_user" checked>
          Existing user
        </label>
        <label for="loginTypeNonExisting">
          <input type="radio" name="loginTypeRadios" id="loginTypeNonExisting" value="non_existing_user">
          Non-existing user
        </label>
      </div>
    </div>
  </div>
</form>

<form role="form">
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <div class="radio">
        <label>
          <input type="radio" name="loginTypeRadios" id="loginTypeExisting" value="existing_user" checked>
          Existing user
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="loginTypeRadios" id="loginTypeNew" value="new_user">
          New user
        </label>
      </div>
    </div>
  </div>
</form>
