<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'View list', todos_path %></li>
  <li>
    <%= link_to new_todo_path do %>
      <i class="glyphicon glyphicon-plus"></i> New Todo
    <% end %>    
  </li>
</ul>

<h1>Listing Todos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td>
        <% if todo.notes? %>
          <!-- Button trigger modal -->
          <button class="btn btn-link" data-toggle="modal" data-target="#todo-<%= todo.id %>-notes">
            View notes
          </button>

          <!-- Modal -->
          <div class="modal fade" id="todo-<%= todo.id %>-notes" tabindex="-1" role="dialog" aria-labelledby="todo-<%= todo.id %>-label" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title" id="todo-<%= todo.id %>-label">
                    Notes
                  </h4>
                </div>
                <div class="modal-body">
                  <%= todo.notes %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-primary" data-dismiss="modal">
                    Close
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        </td>
        <td>
          <%= link_to todo, class: "btn btn-primary btn-xs" do %>
            <i class="glyphicon glyphicon-list-alt"></i> Show
          <% end %>
        </td>
        <td>
          <%= link_to edit_todo_path(todo), class: "btn btn-info btn-xs" do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
        </td>
        <td>
          <%= link_to todo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do %>
            <i class="glyphicon glyphicon-remove"></i> Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

